alias vi="nvim"
alias vit="gnome terminal -- vi"
alias vzshrc="vi ~/.dotfiles/zsh/.zshrc"
alias valias="vi ~/.dotfiles/zsh/aliases"
# Git
alias ga="git add"
alias gaa="git add --all"
alias gs="git status"
alias gc="git commit -m"
alias gp="git push"
alias gpp="git push -u origin HEAD"
alias gl="git pull"
alias gsh="git switch"
alias gshc="git switch -c"
alias glg="git log"
alias gbm="git branch -m"
alias gbd="git branch -D"
alias gd="git diff"

# Docker compose
alias dc=docker-compose

alias ls="ls -p"
alias la="ls -A"
alias ll="ls -l"
alias lla="ll -A"

alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"
