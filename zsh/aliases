alias vi="nvim"
alias vit="gnome terminal -- vi"
alias vzshrc="vi ~/.dotfiles/zsh/.zshrc"
alias vimrc="vi ~/.dotfiles/nvim/init.vim"
alias valias="vi ~/.dotfiles/zsh/aliases"
alias pbcopy="xclip -selection clipboard"
alias ipinfo="curl https://ipinfo.io/"
alias remove="sudo apt-get --purge autoremove"
alias weather="curl https://wttr.in/"
alias cputemp="bash ~/temp.sh"
alias res="xdpyinfo | awk '/dimensions/{print $2}'"
alias tmux="tmux -u"
# Git
alias ga="git add"
alias gaa="git add --all"
alias gs="git status"
alias gc="git commit -m"
alias gcan="git commit --amend --no-edit"
alias gp="git push"
alias gpp="git push -u origin HEAD"
alias gl="git pull"
alias gsh="git switch"
alias gsc="git switch -c"
alias glg="git log"
alias gbm="git branch -m"
alias gbd="git branch -D"
alias gd="git diff"
alias gr="git restore"
alias grs="git restore --staged"
alias grm="git rm -r --cached"

